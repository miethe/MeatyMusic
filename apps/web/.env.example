# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Environment
NODE_ENV=development

# Development Auth Bypass (for MCP/agents/Playwright - DEV ONLY)
# Generate secret with: openssl rand -base64 32
# Must match backend DEV_AUTH_BYPASS_SECRET
# NEXT_PUBLIC_DEV_AUTH_BYPASS_SECRET=your-super-secret-32-plus-character-token

# OpenTelemetry (Optional for local dev)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Feature Flags
NEXT_PUBLIC_FEATURES_ENABLED=true
