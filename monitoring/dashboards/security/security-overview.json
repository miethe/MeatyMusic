{
  "dashboard": {
    "id": null,
    "title": "MeatyMusic Security Overview",
    "tags": ["security", "meatymusic", "rls", "authentication"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Security Boundary Violations",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(meatymusic_security_boundary_violations_total[5m]))",
            "legendFormat": "Violations/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 2,
        "title": "Authentication Failures Rate",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(meatymusic_auth_failures_total[5m]))",
            "legendFormat": "Auth Failures/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Active Security Contexts",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "meatymusic_security_contexts_active",
            "legendFormat": "Active Contexts",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "RLS Policy Effectiveness",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "(sum(meatymusic_rls_policy_applied_total) / sum(meatymusic_db_queries_total)) * 100",
            "legendFormat": "RLS Coverage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 85
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "Security Boundary Violations by Type",
        "type": "timeseries",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (violation_type) (rate(meatymusic_security_boundary_violations_total[5m]))",
            "legendFormat": "{{violation_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "reqps"
          }
        },
        "options": {
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "max"]
          }
        }
      },
      {
        "id": 6,
        "title": "Authentication Methods Distribution",
        "type": "piechart",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (auth_method) (rate(meatymusic_auth_attempts_total[5m]))",
            "legendFormat": "{{auth_method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 7,
        "title": "Security Query Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 17
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(meatymusic_security_query_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(meatymusic_security_query_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "B"
          },
          {
            "expr": "rate(meatymusic_security_query_duration_seconds_sum[5m]) / rate(meatymusic_security_query_duration_seconds_count[5m])",
            "legendFormat": "Average",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10
            },
            "unit": "s"
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 8,
        "title": "Failed Security Validations by Endpoint",
        "type": "table",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 17
        },
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint, validation_type) (rate(meatymusic_security_validation_failures_total[5m])))",
            "legendFormat": "{{endpoint}} - {{validation_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "reqps"
          }
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "validation_type": "Validation Type",
                "Value": "Failures/sec"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Security Context Creation Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "expr": "sum(rate(meatymusic_security_context_created_total[5m]))",
            "legendFormat": "Context Creation Rate",
            "refId": "A"
          },
          {
            "expr": "sum(rate(meatymusic_security_context_validation_errors_total[5m]))",
            "legendFormat": "Context Validation Errors",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 10,
        "title": "RLS Policy Performance by Table",
        "type": "heatmap",
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 26
        },
        "targets": [
          {
            "expr": "sum(rate(meatymusic_rls_query_duration_seconds_bucket[5m])) by (le, table_name)",
            "legendFormat": "{{table_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            }
          }
        },
        "options": {
          "calculate": false,
          "cellGap": 2,
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Spectral",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": false
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "s"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "instance",
          "options": [],
          "query": "label_values(meatymusic_security_boundary_violations_total, instance)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "table_name",
          "options": [],
          "query": "label_values(meatymusic_rls_policy_applied_total, table_name)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "datasource",
            "uid": "grafana"
          },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "enable": true,
          "expr": "ALERTS{alertname=~\"Security.*\", alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Security Alerts",
          "titleFormat": "{{alertname}}: {{summary}}"
        }
      ]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "links": [],
    "liveNow": false,
    "panels": [],
    "schemaVersion": 37,
    "version": 0,
    "weekStart": ""
  }
}
