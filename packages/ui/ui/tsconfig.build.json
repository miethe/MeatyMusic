{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*", "src/**/*.test.tsx", "src/**/*.test.ts", "src/**/*.stories.tsx", "src/test-setup.ts"]
}
