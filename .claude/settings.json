{
  "permissions": {
    "deny": [
      "Read(./secrets/**)",
      "Bash(rm -rf:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(docker:*::*)",
      "Bash(npm install:*)",
      "Bash(pnpm add:*)"
    ],
    "allow": [
      "Bash(pnpm:*)",
      "Bash(uv:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(./**)",
      "Write(./**)",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "LS"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Checking file changes...'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write.*\\.py$",
        "hooks": [
          {
            "type": "command",
            "command": "cd services/api && uv run ruff check --select E,W,F --quiet || echo 'Python linting issues detected'"
          }
        ]
      },
      {
        "matcher": "Write.*\\.(ts|tsx)$",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm typecheck --skipLibCheck || echo 'TypeScript issues detected'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'MeatyMusic AMCS session started â€” follow determinism principles and workflow contracts'"
          }
        ]
      }
    ]
  }
}
